{
	"name": "svelte-app",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host ",
		"build": "vite build",
		"preview": "vite preview  --host",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore /src.",
		"format": "prettier --write --plugin-search-dir=. ./src",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"generate": "plop --plopfile internal/generators/index.js",
		"sw:create": "workbox generateSW ./workbox-config.js",
		"db:migrate": "prisma migrate dev --schema ./src/backend/schema.prisma --name",
		"db:format": "prisma format --schema ./src/backend/schema.prisma",
		"db:generate": "prisma generate --schema ./src/backend/schema.prisma"
	},
	"devDependencies": {
		"@danutu89/plop": "^0.3.0",
		"@sveltejs/kit": "1.0.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"cookie": "^0.5.0",
		"devalue": "^4.2.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"kleur": "^4.1.5",
		"magic-string": "^0.26.7",
		"mime": "^3.0.0",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.7.0",
		"sade": "^1.8.1",
		"set-cookie-parser": "^2.5.1",
		"sirv": "^2.0.2",
		"svelte": "^3.54.0",
		"svelte-adapter-bun": "^0.2.2-3",
		"svelte-check": "^2.8.0",
		"svelte-preprocess": "^4.10.7",
		"tiny-glob": "^0.2.9",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4",
		"undici": "^5.12.0",
		"vite": "4.0.2"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^3.6.0",
		"@sveltejs/adapter-node": "1.0.0",
		"esbuild": "^0.12.29",
		"nodemailer": "^6.7.2",
		"sass": "^1.44.0",
		"workbox-cli": "^6.4.2"
	}
}